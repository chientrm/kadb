{
  "configurations": [
    {
      "name": "debugServer",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/dist/debug/kadb",
      "preLaunchTask": "buildDebug",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "cppdbg",
      "request": "launch",
      "name": "Open a core dump(c/c++)",
      "program": "/workspace/kadb/dist/debug/kadb",
      "coreDumpPath": "${input:coreFileName}",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb"
    }
  ],
  "inputs": [
    {
      "id": "coreFileName",
      "type": "promptString",
      "description": "Enter core file path"
    }
  ]
}
